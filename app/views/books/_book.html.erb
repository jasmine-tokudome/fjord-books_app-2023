<div id="<%= dom_id book %>">

  <p>
    <strong><%= I18n.translate 'title' %>:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong><%= I18n.translate 'memo' %>:</strong>
    <%= book.memo %>
  </p>

  <p>
    <strong><%= I18n.translate 'author' %>:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong><%= I18n.translate 'picture' %>:</strong>
    <%= image_tag(book.picture_url) if book.picture.present? %>
  </p>

</div>
