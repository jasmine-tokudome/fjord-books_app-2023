<h2><%= t('views.common.title_index', name: Comment.model_name.human) %></h2>
<% comments = commentable.comments.order(:id) %>
<% if comments.any? %>

    <% comments.each do |comment| %>

      <p>
        <strong><%= t '.user_name' %></strong>
        <%= comment.user.name_or_email %>
      </p>

      <p>
        <strong><%= Comment.human_attribute_name("content") %></strong>
        <%= comment.content %>
      </p>

      <p>
        <strong><%= Comment.human_attribute_name("created_at") %></strong>
        <%= l comment.created_at %>
      </p>
      <p>
        <%= button_to t('views.common.destroy', name: Comment.model_name.human), [commentable, comment], method: :delete %>
      </p>
    <% end %>
  </ul>
<% else %>
  (<%= t('.no_comments') %>)
<% end %>
